{
    "version": "https://jsonfeed.org/version/1",
    "title": "{{ .Site.Title }}",
    "home_page_url": "{{ .Site.BaseURL }}",
    "feed_url": "{{ .Permalink}}",
    {{ if isset .Site.Params "description" }}
    "description": "{{ .Site.Params.description }}",
    {{ end }}
    {{ if isset .Site.Params "author" }}
    "author": { "name": "{{ .Site.Params.author }}" },
    {{ end }}
    "items": [
    {{ range $i,  (where .Site.Pages "Section" "schools") }}
    {{ if $i }}, {{ end }}
        {
        "title": " {{-  trim .Title "\n" -}}",
        "url": "{{ .Permalink }}",
        "date_published": "{{ .Date }}",
        "city": "{{ .Params.city }}",
        "perioxi": "{{ .Params.perioxi }}",
        "categories": "{{ .Params.categories }}",
        "subcategories": "{{ .Params.subcategories }}",
        "address": "{{ .Params.address }}",
        "logoimg": "{{ .Params.logoimg }}",
        "website": "{{ .Params.website }}",
        "facebook": "{{ .Params.facebook }}",
        "phone": "{{ .Params.phone }}",
        "email": "{{ .Params.email }}",
        "courses": "{{ .Params.courses }}",
        "places": "{{ .Params.places }}",
        "rensponsibles": "{{ .Params.rensponsibles }}",
        "UID": "{{ .Params.UID }}"{{ $dataJ := getJSON "/data/graph-api.json" }}{{ range  where $dataJ ".UID" "==" .Params.UID }},`
        "UID-graph": "{{ .UID }}",
        "cover": "{{ .cover}}",
        "picture": "{{ .picture}}",
        "page_token": "{{ .page_token }}"{{ end }}
        }
    {{ end }}
    ]
}